<?xml version="1.0" encoding="UTF-8" ?>
<Shell
    x:Class="MauiWeather.AppShell"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:local="clr-namespace:MauiWeather"
    xmlns:views="clr-namespace:MauiWeather.Views"
    Shell.FlyoutBehavior="Disabled">

    <FlyoutItem FlyoutDisplayOptions="AsSingleItem">
        <Tab Title="Realtime">
            <ShellContent
        Title="Home"
        ContentTemplate="{DataTemplate views:Realtime}"
        Route="Realtime" />
        </Tab>
        <Tab Title="Forecast">
            <ShellContent Title="Forecast" ContentTemplate="{DataTemplate views:Forecast}" Route="Forecast" />
        </Tab>
        <Tab Title="About">
            <ShellContent Title="About" ContentTemplate="{DataTemplate views:About}" Route="About" />
        </Tab>
    </FlyoutItem>


</Shell>
